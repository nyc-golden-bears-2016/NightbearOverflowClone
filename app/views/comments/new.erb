<% if @errors %>
<div class="errors">
  <label>ERRORS:</label><br>
  <%@errors.each do |error| %>
    <strong><%=error%></strong><br>
  <%end%>
</div>
<% end %>
<div class="content">
<div class="comments">

<% if @question %>
  <form id="" action="/questions/<%= @question.id %>/comments" method="post">
    <div class="container">
      <h2> Your Comment</h2>
      <textarea name="content" rows="5" cols="50"></textarea>
    </div>
      <input type="submit" name="Post Comment">
    </form>
<% end %>


<% if @answer %>
  <form id="" action="/answers/<%= @answer.id %>/comments" method="post">
    <div class="container">
      <h2> Your Comment</h2>
      <textarea name="content" rows="5" cols="50"></textarea>
    </div>
      <input type="submit" name="Post Comment">
    </form>
<% end %>

</div>
</div>
