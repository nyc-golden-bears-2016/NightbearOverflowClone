  <div class="comment">
  <%@comments.each do |comment|%>
      <div><%=comment.body%></div>
      <div><a href="/users/<%=comment.user.id%>"><%=comment.user.username%></a></div>
      <%if comment.updated_at != comment.created_at%>
        <div>Edited: <%=comment.updated_at%></div>
      <%else%>
        <div>Created: <%=comment.created_at%></div>
      <%end%>
      <br>
    <%end%>
  </div>

  <div class="answer">
  <%@answers.each do |answer|%>
  <div class="voting">
    <span id="upvote">Upvote</span>
    <span><%=answer.total_votes%></span>
    <span id="downvote">Downvote</span>
  </div>
      <div><%=answer.body%></div>
      <div><a href="/users/<%=answer.user.id%>"><%=answer.user.username%></a></div>
      <%if answer.updated_at != answer.created_at%>
        <div>Edited: <%=answer.updated_at%></div>
      <%else%>
        <div>Created: <%=answer.created_at%></div>
      <%end%>
      <%if login? && current_user == answer.user%>
        <div>Select As Best Answer</div>
      <%end%>
      <br>
      <div class="comment">
      <%answer.comments.each do |comment|%>
          <div><%=comment.body%></div>
          <div><a href="/users/<%=comment.user.id%>"><%=comment.user.username%></a></div>
          <%if comment.updated_at != comment.created_at%>
            <div>Edited: <%=comment.updated_at%></div>
          <%else%>
            <div>Created: <%=comment.created_at%></div>
          <%end%>
        <br>
        <%end%>
      </div>
    <%end%>
  </div>
